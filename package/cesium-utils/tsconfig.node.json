{
  "extends": "@tsconfig/node18/tsconfig.json",
  "include": [
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "nightwatch.conf.*",
    "playwright.config.*",
    "type/**/*.ts",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "module": "ESNext",
    "lib": ["DOM","ES2020","DOM.Iterable"],
    "moduleResolution": "Node",
    "types": ["node"],
    "declaration": true
  }
}
