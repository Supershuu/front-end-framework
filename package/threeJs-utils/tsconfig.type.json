{
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": "./src",
    "target": "ES5",
    "module": "esnext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "lib": [
      "ES2015",
      "DOM"
    ]
  },
  "include": [
    "src/**/*.ts",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "config"
  ]
}
